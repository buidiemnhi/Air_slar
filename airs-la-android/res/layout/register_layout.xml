<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/bold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/register_bold_text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="helvetica"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bold_text"
            android:layout_centerHorizontal="true"
            android:text="@string/register_normal_text"
            android:fontFamily="helvetica"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/first_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/normal_text"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/first_name_label"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_label"
            android:hint="@string/first_name"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/last_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/last_name_label"/>

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_name_label"
            android:hint="@string/last_name"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/email_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_name"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/email_address_label"/>

        <EditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address_label"
            android:hint="@string/email_address"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/verify_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/verify_email_label"/>

        <EditText
            android:id="@+id/verify_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_email_label"
            android:hint="@string/verify_email"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/gender_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_email"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/gender_label"/>

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_label">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/male"
                android:onClick="onGenderChecked"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/female"
                android:onClick="onGenderChecked"/>

            <RadioButton
                android:id="@+id/transgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/transgender"
                android:onClick="onGenderChecked"/>

        </RadioGroup>

        <TextView
            android:id="@+id/birth_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/birth_label"/>

        <EditText
            android:id="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/birth_label"
            android:hint="@string/birth"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:inputType="number"/>

        <TextView
            android:id="@+id/career_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/birth"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/career_label"/>

        <RadioGroup
            android:id="@+id/career"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/career_label">

            <RadioButton
                android:id="@+id/employed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/employed"
                android:onClick="onCareerChecked"/>

            <RadioButton
                android:id="@+id/student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/student"
                android:onClick="onCareerChecked"/>

            <RadioButton
                android:id="@+id/retired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/retired"
                android:onClick="onCareerChecked"/>

            <RadioButton
                android:id="@+id/unemployed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/unemployed"
                android:onClick="onCareerChecked"/>

            <RadioButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/other"
                android:onClick="onCareerChecked"/>

        </RadioGroup>

        <TextView
            android:id="@+id/address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/career"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/address_label"/>

        <Spinner
            android:id="@+id/address"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_label"/>

        <TextView
            android:id="@+id/vision_impairment_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/vision_impairment_label"/>

        <RadioGroup
            android:id="@+id/vision_impairment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vision_impairment_label">

            <RadioButton
                android:id="@+id/albinism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/albinism"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/cataracts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/cataracts"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/childhood_blindness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/childhood_blindness"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/corneal_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/corneal_opacity"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/diabetic_retinopathy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/diabetic_retinopathy"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/dyslexia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/dyslexia"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/glaucoma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/glaucoma"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/lebers_amaurosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/lebers_amaurosis"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/macular_degeneration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/macular_degeneration"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/neurological_vision_impairment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/neurological_vision_impairment"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/onchocerciasis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/onchocerciasis"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/optic_atrophy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/optic_atrophy"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/retinal_detachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/retinal_detachment"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/retinitis_pigmentosa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/retinitis_pigmentosa"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/stargardts_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/stargardts_disease"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/trachoma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/trachoma"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/traumatic_head_injury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/traumatic_head_injury"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/vision_care_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/vision_care_worker"
                android:onClick="onVisionImpairmentChecked"/>

            <RadioButton
                android:id="@+id/other_vision_impairment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/other_vision_impairment"
                android:onClick="onVisionImpairmentChecked"/>

        </RadioGroup>

        <TextView
            android:id="@+id/who_affected_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vision_impairment"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/who_affected_label"/>

        <RadioGroup
            android:id="@+id/who_affected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/who_affected_label">

            <RadioButton
                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/client"
                android:onClick="onWhoAffectedChecked"/>

            <RadioButton
                android:id="@+id/family_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/family_member"
                android:onClick="onWhoAffectedChecked"/>

            <RadioButton
                android:id="@+id/friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/friend"
                android:onClick="onWhoAffectedChecked"/>

            <RadioButton
                android:id="@+id/student_affected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/student"
                android:onClick="onWhoAffectedChecked"/>

            <RadioButton
                android:id="@+id/yourself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/selection_button"
                android:text="@string/yourself"
                android:onClick="onWhoAffectedChecked"/>

        </RadioGroup>

        <TextView
            android:id="@+id/interested_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/who_affected"
            android:fontFamily="helvetica"
            android:textStyle="bold"
            android:text="@string/interested_label"/>

        <CheckBox
            android:id="@+id/assistive_technology"
            android:layout_below="@id/interested_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/assistive_technology"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/cooking_food"
            android:layout_below="@id/assistive_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/cooking_food"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/diabetes"
            android:layout_below="@id/cooking_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/diabetes"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/entertainment"
            android:layout_below="@id/diabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/entertainment"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/health"
            android:layout_below="@id/entertainment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/health"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/interviews"
            android:layout_below="@id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/interviews"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/kids_programs"
            android:layout_below="@id/interviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/kids_programs"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/science"
            android:layout_below="@id/kids_programs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/science"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/seminars_on_vision"
            android:layout_below="@id/science"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/seminars_on_vision"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/sports"
            android:layout_below="@id/seminars_on_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/sports"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/travel"
            android:layout_below="@id/sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/travel"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/vision_rehabilitation"
            android:layout_below="@id/travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/vision_rehabilitation"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/vision_development"
            android:layout_below="@id/vision_rehabilitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/vision_development"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/other_interested"
            android:layout_below="@id/vision_development"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/other_interested"
            android:onClick="onInterestedChecked"/>

        <CheckBox
            android:id="@+id/certify"
            android:layout_below="@id/other_interested"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selection_button"
            android:text="@string/certify"
            android:onClick="onCertifyChecked"/>

        <ImageView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/certify"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/submit"
            android:src="@drawable/submit_button"
            android:onClick="onSubmit"/>

    </RelativeLayout>

</ScrollView>